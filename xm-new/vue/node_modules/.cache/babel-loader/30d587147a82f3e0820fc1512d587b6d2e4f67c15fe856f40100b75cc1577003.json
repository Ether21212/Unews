      </div>\r\n      <div style=\"width: 300px\">\r\n        <el-input v-model=\"title\" prefix-icon=\"el-icon-search\" size=\"medium\" placeholder=\"请输入新闻关键字搜索\" style=\"hight:40px;width: 220px; margin-right: 5px  ;font-size: 14px; /* 调整搜索框字体大小 */\"></el-input>\r\n        <el-button size=\"medium\" @click=\"search\">搜索</el-button>\r\n      </div>\r\n      <div class=\"front-header-right\">\r\n        <div v-if=\"!user.username\">\r\n          <el-button @click=\"$router.push('/login')\">登录</el-button>\r\n          <el-button @click=\"$router.push('/register')\">注册</el-button>\r\n        </div>\r\n        <div v-else>\r\n          <el-dropdown>\r\n            <div class=\"front-header-dropdown\">\r\n              <img :src=\"user.avatar\" alt=\"\">\r\n              <div style=\"margin-left: 10px\">\r\n                <span>{{ user.name }}</span><i class=\"el-icon-arrow-down\" style=\"margin-left: 5px\"></i>\r\n              </div>\r\n            </div>\r\n            <el-dropdown-menu slot=\"dropdown\">\r\n\r\n              <el-dropdown-item>\r\n                <div @click=\"$router.push('/front/userQuestion')\">我的问题</div>\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <div @click=\"$router.push('/front/userAnswer')\">我的回答</div>\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <div @click=\"$router.push('/front/userFeedback')\">我的反馈</div>\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <div @click=\"$router.push('/front/person')\">个人信息</div>\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <div @click=\"logout\">退出登录</div>\r\n              </el-dropdown-item>\r\n            </el-dropdown-menu>\r\n          </el-dropdown>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <!--主体-->\r\n    <div class=\"main-body\">\r\n      <router-view ref=\"child\" @update:user=\"updateUser\" />\r\n    </d